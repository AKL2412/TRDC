{%extends 'TRCClientBundle::Default/consulter.html.twig'%}
{%block title%}
	Comptes || 
	 {{parent()}}         
{%endblock title%}
{%block titre%}
   Ajout de compte
{%endblock titre%}
{%block position %}
	{{parent()}}
    	<li class="active">
    		<i class="fa fa-angle-right"></i>
    		<i class="fa fa-tags"></i>
            <a href="#">
            	Comptes
            </a>
        </li>
        
{%endblock position%}
{%block content %}
	{%set value = form.vars.value %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel-default panel">
                <div class="panel-heading">
                    {%if value.id is null %}
                        Ajout d'un compte du client
                    {%else%}
                        Modification de compte du client
                    {%endif%}
                </div>
                <div class="panel-body">
                    {{form_start(form)}}
                    
                        <div class="form-group ">
                            <label> Type de compte</label>
                            {{form_widget(form.type,{'attr':{'class':'form-control'}})}}
                        </div>
                        <hr>
                        <div class="form-group">
                            <label>num√©ro de compte</label>
                            {{form_widget(form.numeroCompte,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            <label> Solde</label>
                            {{form_widget(form.solde,{'attr':{'class':'form-control'}})}}
                        </div>
                        
                   
                </div>
                <div class="panel-footer">
                    <div class="form-group">
                        {{form_widget(form.save)}}
                    </div>
                </div>
                {{form_end(form)}}
            </div>
            
        </div>
    </div>
{%endblock content %}